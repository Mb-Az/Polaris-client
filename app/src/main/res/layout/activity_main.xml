<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:contentPadding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Current Configuration"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Server Sync Interval:"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvSyncInterval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#757575"
                            android:textSize="18sp"
                            tools:text="10000 ms" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Measurement Interval:"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvMeasurementInterval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#757575"
                            android:textSize="18sp"
                            tools:text="5000 ms" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test Interval:"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvTestInterval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#757575"
                            android:textSize="18sp"
                            tools:text="300000 ms" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:contentPadding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Status"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Polling Status:"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/ivPollingStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:tint="@color/green"
                            tools:src="@drawable/ic_checkmark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Server Sync Status:"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/ivServerSyncStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:tint="@color/green"
                            tools:src="@drawable/ic_checkmark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cell Measurement Status:"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/ivCellMeasurementStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:tint="@color/green"
                            tools:src="@drawable/ic_checkmark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test Status:"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/ivTestStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:tint="@color/green"
                            tools:src="@drawable/ic_checkmark" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnStartService"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Monitoring"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btnStopService"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Monitoring"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>