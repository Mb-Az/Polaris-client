<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"  tools:background="#1A1A2E"
    android:padding="16dp">

    <!-- Title for the App -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Polaris "
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button to toggle Active/Deactive mode -->
    <Button
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#6A057F"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="Set Active Mode"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <!-- CardView to group status elements -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="352dp"
        android:layout_height="349dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#2A2A4A"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:contentPadding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleButton"
        app:layout_constraintWidth_percent="0.9"
        tools:cardBackgroundColor="#2A2A4A">

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="311dp"
            android:orientation="vertical">

            <!-- Server Connection Status -->

            <TextView
                android:id="@+id/serverStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Server Connection: Disconnected"
                android:textColor="#E0E0FF"
                android:textSize="18sp" />

            <!-- Uptime Status -->

            <!-- GPS Location -->
            <TextView
                android:id="@+id/uptimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:rotationX="5"
                android:text="Uptime: 00h 00m 00s"
                android:textColor="#E0E0FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gpsLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS Location: Not Available"
                android:textColor="#E0E0FF"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="566dp" />

    <!-- Optional: Add a simple star effect using a TextView -->

</androidx.constraintlayout.widget.ConstraintLayout>
